#!/bin/sh

set -e
umask 022
. /usr/share/debconf/confmodule

db_get rtpg-www/change_host

update_hosts()
{
    	echo 127.0.0.1 rtpg-scgi.localhost rtpg >> /etc/hosts
}

if test "$RET" = true; then
    if test -f /etc/hosts; then
        if ! grep -q rtpg-scgi /etc/hosts; then
        	update_hosts
        fi
    else
    	update_hosts
    fi
fi

